@using CIPlatform.Models
@model List<StoryListModel>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-sm-12 col-md-6 col-lg-4 mb-4">
            <div class="card cardWidth shadow h-100">

                <span class="cont">
                    <img src="@Url.Content(@item.cardImg)" class="home-card-img" alt="...">
                    <div class="overlay">
                        <button type="button" onclick="return location.href=' @Url.Action("StoryDetail","Story",new {id=@item.story.StoryId}) '"
                            class="btn btn-sm btn-outline-light centered rounded-pill button start-50 translate-middle ">
                            <span class="text-wrap ps-2 ">View Detail</span>
                            <i class="bi bi-arrow-right pe-1 ps-2"></i>
                        </button>
                    </div>
                </span>
                <div class="card-body">
                    <div class="cardTitleAction">
                        <span class="text-wrap btn btn-sm rounded-pill cardTitleSubAction"
                          style="background-color: white; color: #757575; ">
                            @item.themeText
                        </span>
                    </div>
                    <h5 class="card-title cardTitle">@item.story.Title</h5>
                    <p class="card-text cardText">
                        @item.story.Description
                    </p>

                    <span class="mt-3">
                        <img src="@Url.Content(@item.userImg)" width="40" height="40"
                         class="d-inline-block rounded-circle" alt="">
                        <span>@item.userName</span>
                    </span>
                </div>
            </div>
        </div>
    }
</div>

