@using CIPlatform.Models
@model ContactUsModel

<div class="modal fade" id="contactUs">
    <div class="modal-dialog">
        <div class="modal-content">
            <form id="modalForm" method="post" action="ContactUs">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Contact Us</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"
                            aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <input asp-for="UserId" hidden />
                    <div class="mt-1">
                        <label class="float-start">Name*</label>
                        <input type="text" disabled value="@Model.UserName" asp-for="UserName" class="form-control">
                    </div>
                    <div class="mt-4">
                        <label class="float-start">Email Address*</label>
                        <input type="email" disabled value="@Model.UserEmail" asp-for="UserName" class="form-control">
                    </div>
                    <div class="mt-4">
                        <label class="float-start">Subject*</label>
                        <input type="text" name="Subject" asp-for="Subject" required="" class="form-control" placeholder="Enter Subject">
                        <span asp-validation-for="Subject" class="text-danger"></span>
                    </div>
                    <div class="mt-4 mb-2">
                        <label for="" class="float-start">Message*</label>
                        <br>
                        <textarea asp-for="Message" name="Message" class="form-control" required="" placeholder="Enter your Message"
                                  class="w-100 h-100"></textarea>
                        <span asp-validation-for="Message" class="text-danger"></span>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-outline-secondary rounded-pill px-5"
                            data-bs-dismiss="modal">
                        Cancel
                    </button>
                    <button type="submit" class="btn btn-outline-warning rounded-pill px-5">
                        Save
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>