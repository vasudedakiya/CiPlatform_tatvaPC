@using CIPlatform.DataModels
@model User

<div class="modal fade" id="AddAdmin">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel"> @(Model.UserId == 0? "Add New":"Edit") User</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"
                        aria-label="Close"></button>
            </div>
            <form id="modalForm" method="post" action="CreateUser">
                <div class="modal-body">
                    <div class="row">
                        <input asp-for="UserId" hidden />
                        <input asp-for="CreatedAt" hidden />
                        <input asp-for="Status" hidden />
                        <div class="col-12 mt-3">
                            <label asp-for="FirstName">First Name</label>
                            <input type="text" name="FirstName" asp-for="FirstName" class="form-control"
                                   placeholder="Enter First Name" id="" required="">
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>
                        <div class="col-12 mt-3">
                            <label asp-for="LastName">Last Name</label>
                            <input type="text" name="LastName" asp-for="LastName" class="form-control"
                                   placeholder="Enter Last Name" id="" required="">
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>
                        <div class="col-12 mt-3">
                            <label asp-for="Email">Email id</label>
                            <input type="text" asp-for="Email" name="Email" class="form-control" placeholder="Enter Email" required=""
                                   id="">
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="col-12 mt-3">
                            <label asp-for="PhoneNumber">Phone Number</label>
                            <input type="number" asp-for="PhoneNumber" name="PhoneNumber" class="form-control" placeholder="Enter Phone Number"
                                   id="" required="">
                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                        </div>
                        <div class="col-12 mt-3">
                            <label asp-for="Password">Password</label>
                            <input type="@(Model.UserId == 0? "password" : "text")" asp-for="Password" name="Password" class="form-control" placeholder="Enter Password"
                                   id="txtPassword">
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <span class="text-danger">@TempData["ErrorMes"]</span>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-outline-secondary rounded-pill"
                            data-bs-dismiss="modal">
                        Cancel
                    </button>
                    <button type="submit" class="btn btn-outline-warning rounded-pill">Submit</button>
                </div>
            </form>
        </div>
    </div>
</div>s