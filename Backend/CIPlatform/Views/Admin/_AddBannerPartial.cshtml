@using CIPlatform.DataModels

@model Banner

<div class="modal fade" id="AddCarousel" tabindex="-1" aria-labelledby="AddCarouselLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form id="modalForm" method="post" action="CreateBanner" enctype="multipart/form-data">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">@(Model.BannerId == 0 ? "Add New" : "Edit") Banner</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"
                            aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="row">

                        <div class="col-12 mt-3">
                            <label asp-for="Title">Title</label>
                            <input type="text" name="Title" asp-for="Title" class="form-control"
                                   placeholder="Enter Carousel Title" id="" required="">
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>
                        <div class="col-12 mt-3">
                            <label asp-for="Text">Carousel Description</label>
                            <textarea name="Text" asp-for="Text" class="form-control" required="" placeholder="Enter your message"
                                      id="" cols="30" rows="4"></textarea>
                            <span asp-validation-for="Text" class="text-danger"></span>
                        </div>
                        <input asp-for="BannerId" hidden />
                        <input asp-for="CreatedAt" hidden />
                        <input asp-for="Image" hidden />
                        <div class="col-12 mt-3">
                            <label asp-for="Image">Carousel Img</label>
                            <div class="form-group files uploadImg">
                                <input type="file" name="carouselImg" required="" id="uploadBox">
                            </div>
                            <label class="fs-6">Allowed file types: Jpg</label>
                        </div>


                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-outline-secondary rounded-pill"
                            data-bs-dismiss="modal">
                        Cancel
                    </button>
                    <button type="submit" class="btn btn-outline-warning rounded-pill">Submit</button>
                </div>
            </form>
        </div>
    </div>
</div>