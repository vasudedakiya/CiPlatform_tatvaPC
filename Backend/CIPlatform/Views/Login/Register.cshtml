@using CIPlatform.Models
@model LoginModel

<div class="container-fluid">
    <div class="row">

        <div class="col-md-12 col-sm-12 col-lg-9" style="padding: 0px;">

            <div id="carouselExampleCaptions" class="carousel slide" data-bs-ride="false">

                <div class="carousel-indicators">
                    @{
                        var isButtonFirst = true;
                    }
                    @for (var i = 0; i < Model.banner.Count(); i++)
                    {
                        <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="@i"
                            class="@(isButtonFirst ? "active": "")" aria-current="true" aria-label="Slide @i"
                            style="height: 8px;width: 8px; border-radius: 10px;border: 0;"></button>
                        <span style="display:none">@(isButtonFirst = false)</span>
                    }

                </div>

                <div class="carousel-inner">

                    @{
                        var isFirst = true; foreach (var item in Model.banner)
                        {
                            <div class="carousel-item @(isFirst ? "active": "")">

                                <img src="@Url.Content(@item.Image)"
                                 class="d-block img img-fluid CorouselImg" alt="...">
                                <span style="display:none">@(isFirst = false)</span>

                                <div class="carousel-caption d-none d-lg-block">
                                    <h3 class="CorouselTitle">@item.Title</h3>
                                    <p class="CorouselText">@item.Text</p>
                                </div>
                            </div>
                        }
                    }
                </div>
            </div>
        </div>

        <div class="col-lg 3 col-md-12 col-sm-12 wrapper vcenter-item" style="padding: 0px;">

            <div class="box">
                <form method="post">
                    <div class="form-group mb-3">
                        <label class="label" asp-for="user.FirstName">First Name</label>
                        <input type="text" class="form-control customshadow" style="display: inline;"
                               asp-for="user.FirstName" placeholder="First Name" required="">
                        <span asp-validation-for="user.FirstName" class="text-danger"></span>

                    </div>

                    <div class="form-group mb-3">
                        <label class="label" asp-for="user.LastName">Last Name</label>
                        <input type="text" class="form-control customshadow" style="display: inline;"
                               asp-for="user.LastName" placeholder="Last Name" required="">
                    </div>

                    <div class="form-group mb-3">
                        <label class="label" asp-for="user.Email">Email Address</label>
                        <input type="text" class="form-control customshadow" style="display: inline;"
                               asp-for="user.Email" placeholder="Email Address" required="">
                        <span asp-validation-for="user.Email" class="text-danger"></span>

                    </div>

                    <div class="form-group mb-3">
                        <label class="label" asp-for="user.PhoneNumber">Phone Number</label>
                        <input type="number" class="form-control customshadow" style="display: inline;"
                               asp-for="user.PhoneNumber" placeholder="Number" required="">
                        <span asp-validation-for="user.PhoneNumber" class="text-danger"></span>

                    </div>

                    <div class="form-group mb-3">
                        <label class="label" asp-for="user.Password">Password</label>
                        <input id="txtPassword" type="password" class="form-control customshadow" style="display: inline;"
                               asp-for="user.Password" placeholder="Password" required="">
                        <span asp-validation-for="user.Password" class="text-danger"></span>

                    </div>

                    <div class="form-group mb-5">
                        <label class="label">Conform Password</label>
                        <input id="txtConfirmPassword" type="password" class="form-control customshadow" style="display: inline;"
                               placeholder="Conform Password" required="">
                    </div>

                    <span class="text-danger">@TempData["ErrorMes"]</span>

                    <button type="submit" onclick="return Validate()"
                            class="form-control rounded-pill btn btn-outline-warning">
                        Register
                    </button>
                </form>
                <div style="text-align: center;">
                    Already Have Account?
                    <a asp-controller="Login" asp-action="Login">Login</a>
                </div>
                <div style="text-align: center;">
                    <a asp-controller="Policy" asp-action="Policy" class="link-dark">Privacy Policy</a>
                </div>
            </div>
        </div>
    </div>
</div>


<script src="~/js/site.js" asp-append-version="true"></script>

@section Scripts {
<script type="text/javascript">
    function Validate() {
        var password = document.getElementById("txtPassword").value;
        var confirmPassword = document.getElementById("txtConfirmPassword").value;
        if (password != confirmPassword) {
            alert("Passwords do not match.");
            return false;
        }
        if (!isValidPassword(password)) {
            alert("Invalid password");
            return false;
        }
        return true;
    }
</script>
}
