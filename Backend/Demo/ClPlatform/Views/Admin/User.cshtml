@{
    Layout = "~/Views/Shared/_Layout2.cshtml";
}
@using ClPlatform.Models
@model AdminUserModel
<span class="fs-2 border-bottom border-dark border-2 pb-2 ">User</span>
<hr style="margin-top: 6px;">

<div style="margin-bottom: 70px;">
    <span class="float-end">
        <button type="button" class="btn btn-outline-warning rounded-pill" data-bs-toggle="modal"
                data-bs-target="#AddUser">
            <i class="bi bi-plus"></i>
            <span class="text-wrap">Add Admin</span>
        </button>
    </span>
</div>

<div class="modal fade" id="AddUser" tabindex="-1" aria-labelledby="AddUserlLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Add new Admin</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"
                        aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form>
                    <div class="row">

                        <div class="col-12 mt-3">
                            <label for="">First Name</label>
                            <input type="text" name="" class="form-control"
                                   placeholder="Enter First Name" id="">
                        </div>
                        <div class="col-12 mt-3">
                            <label for="">Last Name</label>
                            <input type="text" name="" class="form-control"
                                   placeholder="Enter Last Name" id="">
                        </div>
                        <div class="col-12 mt-3">
                            <label for="">Email id</label>
                            <input type="text" name="" class="form-control" placeholder="Enter Email"
                                   id="">
                        </div>
                        <div class="col-12 mt-3">
                            <label for="">Password</label>
                            <input type="text" name="" class="form-control" placeholder="Enter Password"
                                   id="">
                        </div>
                        <div class="col-12 mt-3">
                            <label for="">Confirm Password</label>
                            <input type="text" name="" class="form-control"
                                   placeholder="Confirm Password" id="">
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-outline-secondary rounded-pill"
                        data-bs-dismiss="modal">
                    Cancel
                </button>
                <button type="button" class="btn btn-outline-warning rounded-pill">Submit</button>
            </div>
        </div>
    </div>
</div>

<table id="datatable" class="table table-borderless">
    <thead class="table-light text-primary">
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Email</th>
            <th>Last Name</th>
            <th>Status</th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.users)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.FirstName</td>
                <td>@item.Email</td>
                <td>@item.LastName</td>
                <td class="text-success fw-bold">Active</td>
                <td><i class="bi bi-pencil-square text-secondary"></i></td>
                <td><i class="bi bi-trash text-danger"></i></td>
            </tr>
        }
        

    </tbody>
</table>
